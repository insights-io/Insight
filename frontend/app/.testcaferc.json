{
  "selectorTimeout": 500,
  "quarantineMode": false,
  "skipJsErrors": true,
  "concurrency": 1,
  "screenshots": {
    "takeOnFails": true,
    "pathPattern": "${USERAGENT}/${FIXTURE}/${TEST}-${QUARANTINE_ATTEMPT}.png",
    "path": "artifacts/screenshots/"
  },
  "videoPath": "artifacts/videos/",
  "videoOptions": {
    "failedOnly": true,
    "pathPattern": "${USERAGENT}/${FIXTURE}/${TEST}-${QUARANTINE_ATTEMPT}.mp4"
  },
  "clientScripts": [
    { "module": "@testing-library/dom/dist/@testing-library/dom.umd.js" }
  ]
}

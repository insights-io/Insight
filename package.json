{
  "name": "@insight/frontend",
  "private": true,
  "workspaces": [
    "frontend/**"
  ],
  "engines": {
    "node": ">=10.17.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run --stream --concurrency 2 --sort build",
    "test": "lerna run --stream --concurrency 2 --sort test",
    "test:coverage": "yarn test -- -- --coverage",
    "lint": "lerna run --stream --concurrency 2 lint",
    "frontend:browser:boostrap:build": "yarn workspace @insight/browser-bootstrap build",
    "frontend:browser:tracking:build": "yarn workspace @insight/browser-tracking build:with-deps",
    "frontend:homepage:build": "yarn workspace @insight/homepage build",
    "frontend:app:build": "yarn workspace @insight/app build"
  },
  "devDependencies": {
    "@ffmpeg-installer/ffmpeg": "1.0.20",
    "@testing-library/jest-dom": "5.11.4",
    "@testing-library/react": "11.0.4",
    "@testing-library/react-hooks": "3.4.2",
    "@testing-library/testcafe": "4.2.3",
    "@testing-library/user-event": "12.1.7",
    "@types/jest": "26.0.14",
    "@types/sinon": "9.0.7",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "babel-loader": "8.1.0",
    "concurrently": "5.3.0",
    "cross-env": "7.0.2",
    "eslint": "7.10.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.0.2",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-lodash": "7.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.3",
    "eslint-plugin-react-hooks": "4.1.2",
    "eslint-plugin-testcafe": "0.2.1",
    "eslint-plugin-testing-library": "3.9.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "jest-environment-jsdom-sixteen": "1.0.3",
    "lerna": "3.22.1",
    "prettier": "2.1.2",
    "pretty-quick": "3.0.2",
    "react-test-renderer": "16.13.1",
    "serve": "11.3.2",
    "sinon": "9.1.0",
    "testcafe": "1.9.4",
    "ts-jest": "26.4.1",
    "tsdx": "0.13.3",
    "typescript": "4.0.3",
    "wait-on": "5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}

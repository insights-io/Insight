{
  "name": "@insight/frontend",
  "private": true,
  "workspaces": [
    "frontend/**"
  ],
  "engines": {
    "node": ">=10.17.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run --stream --concurrency 2 --sort build",
    "test": "lerna run --stream --concurrency 2 --sort test",
    "test:coverage": "yarn test -- -- --coverage",
    "lint": "lerna run --stream --concurrency 2 lint",
    "frontend:browser:boostrap:build": "yarn workspace @insight/browser-bootstrap build",
    "frontend:browser:tracking:build": "yarn workspace @insight/browser-tracking build:with-deps",
    "frontend:homepage:build": "yarn workspace @insight/homepage build",
    "frontend:app:build": "yarn workspace @insight/app build",
    "frontend:try:build": "yarn workspace @insight/try build"
  },
  "devDependencies": {
    "@ffmpeg-installer/ffmpeg": "1.0.20",
    "@testing-library/jest-dom": "5.11.5",
    "@testing-library/react": "11.1.2",
    "@testing-library/react-hooks": "3.4.2",
    "@testing-library/testcafe": "4.2.3",
    "@testing-library/user-event": "12.2.2",
    "@types/jest": "26.0.15",
    "@types/sinon": "9.0.8",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "babel-loader": "8.2.1",
    "concurrently": "5.3.0",
    "cross-env": "7.0.2",
    "eslint": "7.13.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-lodash": "7.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-testcafe": "0.2.1",
    "eslint-plugin-testing-library": "3.10.0",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "jest-environment-jsdom-sixteen": "1.0.3",
    "lerna": "3.22.1",
    "prettier": "2.1.2",
    "pretty-quick": "3.1.0",
    "react-test-renderer": "17.0.1",
    "serve": "11.3.2",
    "sinon": "9.2.1",
    "testcafe": "1.9.4",
    "ts-jest": "26.4.4",
    "typescript": "4.0.5",
    "wait-on": "5.2.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "@rollup/plugin-typescript": "6.1.0",
    "@types/rollup-plugin-sourcemaps": "0.4.2",
    "@types/rollup-plugin-peer-deps-external": "2.2.0",
    "ts-node": "9.0.0",
    "@types/fs-extra": "9.0.4",
    "rollup": "2.33.1",
    "@rollup/plugin-node-resolve": "10.0.0",
    "@rollup/plugin-commonjs": "16.0.0",
    "@rollup/plugin-replace": "2.3.4",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-sourcemaps": "0.6.3"
  },
  "resolutions": {
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
